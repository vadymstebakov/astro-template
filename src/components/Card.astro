---
import s from './Card.module.css';

export interface Props {
    title: string;
    body: string;
    href: string;
}

const { href, title, body } = Astro.props;
---

<li class={s['link-card']}>
    <a class={s.link} href={href}>
        <h2 class={s.title}>
            {title}
            <span>&rarr;</span>
        </h2>
        <p class={s.body}>
            {body}
        </p>
    </a>
</li>
