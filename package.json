{
    "name": "astro-template",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "node": ">=16.12.0",
        "yarn": "please-use-npm",
        "npm": ">=8.1.0"
    },
    "scripts": {
        "dev": "astro dev",
        "build": "astro check && tsc && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,ts,astro}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.{css,astro}\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,astro,html,css,mjs,cjs}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,ts,tsx,jsx,json,astro,html,css,mjs,cjs}\"",
        "lint": "astro check && npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "prepare": "husky install"
    },
    "dependencies": {
        "astro": "^2.7.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-astro": "^0.27.2",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^8.0.3",
        "postcss-html": "^1.5.0",
        "prettier": "^2.8.8",
        "prettier-plugin-astro": "^0.10.0",
        "stylelint": "^15.9.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-standard": "^33.0.0"
    }
}
