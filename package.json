{
    "name": "astro-template",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "engines": {
        "node": ">=18.14.1",
        "yarn": "please-use-npm",
        "npm": ">=9.3.1"
    },
    "scripts": {
        "dev": "astro dev",
        "build": "astro check && tsc && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "lint:eslint": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"src/**/*.{js,ts,astro}\"",
        "lint:stylelint": "stylelint --cache -q \"**/*.{css,astro}\"",
        "lint:prettier": "prettier --check \"**/*.{js,ts,tsx,jsx,json,astro,html,css,mjs,cjs}\"",
        "lint:prettier:fix": "prettier --write \"**/*.{js,ts,tsx,jsx,json,astro,html,css,mjs,cjs}\"",
        "lint": "astro check && npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
        "prepare": "husky install"
    },
    "dependencies": {
        "astro": "^3.0.3"
    },
    "devDependencies": {
        "@astrojs/check": "^0.2.0",
        "@astrojs/tailwind": "^5.0.0",
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@typescript-eslint/parser": "^6.5.0",
        "autoprefixer": "^10.4.15",
        "eslint": "^8.48.0",
        "eslint-plugin-astro": "^0.29.0",
        "husky": "^8.0.3",
        "postcss-html": "^1.5.0",
        "prettier": "^3.0.3",
        "prettier-plugin-astro": "^0.12.0",
        "stylelint": "^15.10.3",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-standard": "^34.0.0",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.2.2"
    }
}
